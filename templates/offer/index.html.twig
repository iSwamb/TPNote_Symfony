{% extends 'base.html.twig' %}

{% block title %}Hello FrontofficeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% for offer in offers %}
            <p>{{ offer.company }} {{ offer.city }} {{ offer.department }} {{ offer.description }}</p>
        {% endfor %}
    </div>

{% endblock %}
