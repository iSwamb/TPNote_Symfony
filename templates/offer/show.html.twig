{% extends 'base.html.twig' %}

{% block title %}Hello FrontofficeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Détail de l'offre N°{{ offer.id }}</h1>

        <p>Date de publication: {{ offer.createdAt|date("d/m/Y") }}</p>
        <p>Department : {{ offer.department}} </p>
        <p>Description: {{ offer.description }}</p>
        <p>ZipCode: {{ offer.zipcode }}</p>
        <p>City: {{ offer.city }}</p>
        <p>Company: {{ offer.company }}</p>
        <p>Contact Email: {{ offer.contactEmail }}</p>
        <p>Reférence: {{ offer.reference }}</p>
        <p>Latitude: {{ offer.latitude }}</p>
        <p>Longitude: {{ offer.longitude }}</p>
    </div>

{% endblock %}